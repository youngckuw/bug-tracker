pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent any
            steps {
                dir('bugtracker-backend') {
                    // Run tests inside the golang-junit image using the Docker CLI. This avoids
                    // relying on the declarative "docker" agent (which requires the Docker
                    // Pipeline plugin). The agent for the stage runs on any available node; that
                    // node must have Docker available for this to work.
                    sh 'docker run --rm -v "$PWD":/src -w /src snakee/golang-junit:1.21 sh -c "go test -v ./..."'
                }
            }
        }
    }
}
