pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    withEnv(["GOMODCACHE=${env.WORKSPACE}/.gomodcache"]) {
                    sh 'go test -v ./...'
                    }
                }
            }
        }
    }
}
